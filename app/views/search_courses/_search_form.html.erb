<%= form_for(@course, url: search_courses_path, html: { method: :get, class: 'form-horizontal', role: 'form' }) do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="bi bi-search"></i> 検索条件</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label class="col-sm-4 control-label" for="">クラス名</label>
            <div class="col-sm-8">
              <%= f.text_field :course_name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label" for="">講師名</label>
            <div class="col-sm-8">
              <%= f.text_field :teacher_name, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label" for="">難易度</label>
            <div class="col-sm-8">
              <%= f.select :level_id,
                selectable_levels,
                { prompt: "----" },
                { class: "form-control" }%>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label" for="">分類</label>
            <div class="col-sm-8">
              <%= f.collection_select :genre_ids,
                Genre.all, :id, :name, {},
                { class: "form-control", multiple: true, size: 2 } %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label class="col-sm-4 control-label" for="">生徒名</label>
            <div class="col-sm-8">
              <%= f.text_field :student_name, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-sm-12 row text-center">
          <%= link_to "クリア", new_search_course_path, { class: 'btn btn-default btn-left' } %>
          <button class="btn btn-default btn-primary" type="submit"><i class="fa fa-search"></i> 検索</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
