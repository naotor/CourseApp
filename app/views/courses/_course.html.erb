  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <i class="bi bi-music-note-beamed"></i>
        <%= course.display_name %>
      </h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-6">
          <table class="table">
            <tr>
              <th>講師</th>
              <td><%= course.teacher.name %></td>
            </tr>
            <tr>
              <th>難易度</th>
              <td><%= course.level.name %></td>
            </tr>
            <tr>
              <th>分類</th>
              <td><%= course.display_genres %></td>
            </tr>
          </table>
        </div>
        <div class="col-sm-6">
          <h4>生徒一覧</h4>
          <ul>
            <% course.students.each do |student| %>
              <li><%= student.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-sm-12 row text-right">
        <%= link_to "科目一覧", course_plans_path(course), {class: "btn btn-default"} %>
        <%= link_to "生徒一覧", course_assign_students_path(course), {class: "btn btn-default"} %>
        <% if admin %>
          <%= link_to "編集", edit_course_path(course), {class: "btn btn-success"} %>
          <%= link_to "削除", course_path(course), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
