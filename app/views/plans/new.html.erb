<h2><%= @course.name %>の科目</h2>

<%= form_for [@course, @plan] do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, { class: "form-control", placeholder: "Enter title" } %>
  </div>
  <div class="form-group">
    <%= f.label :body, "内容" %>
    <%= f.text_area :body, { class: "form-control", placeholder: "Enter body" } %>
  </div>
  <%= f.submit "追加", { class: "btn btn-primary" } %>
<% end %>

